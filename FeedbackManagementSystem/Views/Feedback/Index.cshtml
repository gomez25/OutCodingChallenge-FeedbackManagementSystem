@model IEnumerable<FeedbackViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feedback of the last month</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Description
        </th>
        <th>
            Category
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
            </td>
        </tr>
    }
</table>
