@model IEnumerable<CategoryFeedbackViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feedback of the last month</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Create New</a>
</p>

@foreach (var categoryFeedback in Model)
{
    <h3>@Html.Encode(categoryFeedback.CategoryName)</h3>
    <table class="table">
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>

        @foreach (var feedback in categoryFeedback.Feedbacks)
        {
            <tr>
                <td>
                    @Html.Encode(feedback.CustomerName)
                </td>
                <td>
                    @Html.Encode(feedback.Description)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = feedback.Id })" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("Delete", new { id = feedback.Id })" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </table>
}